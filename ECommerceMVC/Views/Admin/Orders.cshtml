@model List<ECommerceMVC.Models.Order>
@{
    ViewData["Title"] = "Quản lý đơn hàng";
    Layout = "_LayoutAdmin";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 style="color: #FF9500;"><i class="fas fa-receipt me-2"></i>Quản lý đơn hàng</h2>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-receipt" style="font-size: 100px; color: #FFE5CC;"></i>
            <h3 class="mt-4" style="color: #FF9500;">Chưa có đơn hàng nào</h3>
            <p class="text-muted">Đơn hàng sẽ xuất hiện ở đây khi có khách đặt món</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead style="background-color: #FFF4E6;">
                    <tr>
                        <th>Mã đơn</th>
                        <th>Khách hàng</th>
                        <th>Ngày đặt</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td><strong>#@order.Id</strong></td>
                            <td>@order.Customer?.FullName</td>
                            <td>@order.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                            <td><strong style="color: #FF9500;">@order.TotalAmount.ToString("N0")đ</strong></td>
                            <td>
                                @{
                                    var statusBadge = order.Status switch
                                    {
                                        "Pending" => "bg-warning",
                                        "Preparing" => "bg-info",
                                        "Delivering" => "bg-primary",
                                        "Delivered" => "bg-success",
                                        "Cancelled" => "bg-danger",
                                        _ => "bg-secondary"
                                    };
                                    var statusText = order.Status switch
                                    {
                                        "Pending" => "Chờ xác nhận",
                                        "Preparing" => "Chuẩn bị món",
                                        "Delivering" => "Đang giao",
                                        "Delivered" => "Hoàn thành",
                                        "Cancelled" => "Đã hủy",
                                        _ => order.Status
                                    };
                                }
                                <span class="badge @statusBadge">@statusText</span>
                            </td>
                            <td>
                                <a asp-action="OrderDetails" asp-route-id="@order.Id" class="btn btn-sm text-white" style="background-color: #FF9500; border: none;">
                                    <i class="fa fa-eye"></i> Chi tiết
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
