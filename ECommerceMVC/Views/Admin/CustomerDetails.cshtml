@model ECommerceMVC.Models.Customer

@{
    ViewData["Title"] = "Chi tiết khách hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2 style="color: #FF9500; font-weight: 600; margin: 0;">
                    <i class="fas fa-user-circle me-2"></i>Chi tiết khách hàng
                </h2>
                <a asp-action="Customers" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Quay lại
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Thông tin cá nhân -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header text-white" style="background: linear-gradient(135deg, #FF9500 0%, #FF7C1F 100%);">
                    <h5 class="mb-0"><i class="fas fa-user me-2"></i>Thông tin cá nhân</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="rounded-circle bg-light d-inline-flex align-items-center justify-content-center" style="width: 100px; height: 100px;">
                            <i class="fas fa-user" style="font-size: 3rem; color: #FF9500;"></i>
                        </div>
                        <h4 class="mt-3 mb-1">@Model.FullName</h4>
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">
                                <i class="fas fa-check-circle me-1"></i>Đang hoạt động
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-danger">
                                <i class="fas fa-lock me-1"></i>Đã khóa
                            </span>
                        }
                    </div>

                    <hr>

                    <div class="mb-3">
                        <label class="text-muted mb-1"><i class="fas fa-id-card me-2"></i>Mã khách hàng</label>
                        <div><strong>#@Model.Id</strong></div>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted mb-1"><i class="fas fa-user me-2"></i>Tên đăng nhập</label>
                        <div><strong>@Model.UserName</strong></div>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted mb-1"><i class="fas fa-envelope me-2"></i>Email</label>
                        <div><strong>@Model.Email</strong></div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Phone))
                    {
                        <div class="mb-3">
                            <label class="text-muted mb-1"><i class="fas fa-phone me-2"></i>Số điện thoại</label>
                            <div><strong>@Model.Phone</strong></div>
                        </div>
                    }

                    <div class="mb-3">
                        <label class="text-muted mb-1"><i class="fas fa-venus-mars me-2"></i>Giới tính</label>
                        <div><strong>@(Model.Gender ? "Nam" : "Nữ")</strong></div>
                    </div>

                    @if (Model.DateOfBirth.HasValue)
                    {
                        <div class="mb-3">
                            <label class="text-muted mb-1"><i class="fas fa-birthday-cake me-2"></i>Ngày sinh</label>
                            <div><strong>@Model.DateOfBirth.Value.ToString("dd/MM/yyyy")</strong></div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Address))
                    {
                        <div class="mb-3">
                            <label class="text-muted mb-1"><i class="fas fa-map-marker-alt me-2"></i>Địa chỉ</label>
                            <div><strong>@Model.Address</strong></div>
                        </div>
                    }

                    <div class="mb-3">
                        <label class="text-muted mb-1"><i class="fas fa-calendar-plus me-2"></i>Ngày đăng ký</label>
                        <div><strong>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</strong></div>
                    </div>

                    <hr>

                    <div class="d-grid gap-2">
                        @if (Model.IsActive)
                        {
                            <button onclick="toggleStatus(@Model.Id, '@Model.FullName', true)" class="btn btn-warning">
                                <i class="fas fa-lock me-2"></i>Khóa tài khoản
                            </button>
                        }
                        else
                        {
                            <button onclick="toggleStatus(@Model.Id, '@Model.FullName', false)" class="btn btn-success">
                                <i class="fas fa-unlock me-2"></i>Mở khóa tài khoản
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Thống kê và đơn hàng -->
        <div class="col-md-8">
            <!-- Thống kê -->
            <div class="row mb-4">
                <div class="col-md-3 mb-3">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-shopping-cart" style="font-size: 2rem; color: #FF9500;"></i>
                            <h3 class="mt-2 mb-0" style="color: #FF9500;">@ViewBag.TotalOrders</h3>
                            <small class="text-muted">Tổng đơn hàng</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-check-circle" style="font-size: 2rem; color: #28a745;"></i>
                            <h3 class="mt-2 mb-0" style="color: #28a745;">@ViewBag.CompletedOrders</h3>
                            <small class="text-muted">Hoàn thành</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-times-circle" style="font-size: 2rem; color: #dc3545;"></i>
                            <h3 class="mt-2 mb-0" style="color: #dc3545;">@ViewBag.CancelledOrders</h3>
                            <small class="text-muted">Đã hủy</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-dollar-sign" style="font-size: 2rem; color: #ffc107;"></i>
                            <h3 class="mt-2 mb-0" style="color: #ffc107;">@ViewBag.TotalSpent.ToString("N0")đ</h3>
                            <small class="text-muted">Tổng chi tiêu</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Lịch sử đơn hàng -->
            <div class="card shadow-sm border-0">
                <div class="card-header text-white" style="background: linear-gradient(135deg, #FF9500 0%, #FF7C1F 100%);">
                    <h5 class="mb-0"><i class="fas fa-history me-2"></i>Lịch sử đơn hàng (10 đơn gần nhất)</h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.Orders.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Mã đơn</th>
                                        <th>Ngày đặt</th>
                                        <th class="text-end">Tổng tiền</th>
                                        <th class="text-center">Trạng thái</th>
                                        <th class="text-center">Chi tiết</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.Orders)
                                    {
                                        <tr>
                                            <td><strong>#@order.Id</strong></td>
                                            <td>@order.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td class="text-end"><strong>@order.TotalAmount.ToString("N0")đ</strong></td>
                                            <td class="text-center">
                                                @switch (order.Status)
                                                {
                                                    case "Pending":
                                                        <span class="badge bg-warning text-dark">Chờ xác nhận</span>
                                                        break;
                                                    case "Preparing":
                                                        <span class="badge bg-info">Chuẩn bị món</span>
                                                        break;
                                                    case "Delivering":
                                                        <span class="badge bg-primary">Đang giao</span>
                                                        break;
                                                    case "Delivered":
                                                        <span class="badge bg-success">Hoàn thành</span>
                                                        break;
                                                    case "Cancelled":
                                                        <span class="badge bg-danger">Đã hủy</span>
                                                        break;
                                                }
                                            </td>
                                            <td class="text-center">
                                                <a asp-action="OrderDetails" asp-route-id="@order.Id" class="btn btn-sm btn-info">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-shopping-bag" style="font-size: 3rem; color: #ccc;"></i>
                            <p class="text-muted mt-3">Chưa có đơn hàng nào</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleStatus(customerId, customerName, isActive) {
            const action = isActive ? 'khóa' : 'mở khóa';
            if (!confirm(`Bạn có chắc muốn ${action} tài khoản của ${customerName}?`)) {
                return;
            }

            $.ajax({
                url: '@Url.Action("ToggleCustomerStatus", "Admin")',
                type: 'POST',
                data: { id: customerId },
                success: function (response) {
                    if (response.success) {
                        alert(response.message);
                        location.reload();
                    } else {
                        alert('Lỗi: ' + response.message);
                    }
                },
                error: function () {
                    alert('Đã xảy ra lỗi khi xử lý yêu cầu');
                }
            });
        }
    </script>
}
