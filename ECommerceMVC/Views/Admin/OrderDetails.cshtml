@model ECommerceMVC.Models.Order
@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    Layout = "_LayoutAdmin";
    var statusText = Model.Status switch
    {
        "Pending" => "Chờ xác nhận",
        "Preparing" => "Chuẩn bị món",
        "Delivering" => "Đang giao",
        "Delivered" => "Hoàn thành",
        "Cancelled" => "Đã hủy",
        _ => Model.Status
    };
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 style="color: #FF9500;"><i class="fas fa-receipt me-2"></i>Chi tiết đơn hàng #@Model.Id</h2>
        <div>
            @if (Model.Status != "Cancelled")
            {
                <a asp-action="ExportInvoice" asp-route-id="@Model.Id" class="btn btn-success me-2" style="border-radius: 8px;">
                    <i class="fas fa-file-pdf me-2"></i>Xuất hóa đơn PDF
                </a>
            }
            <a asp-action="Orders" class="btn text-white" style="background-color: #FF9500; border: none; border-radius: 8px;">
                <i class="fa fa-arrow-left me-2"></i>Quay lại
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <!-- Thông tin đơn hàng -->
            <div class="card mb-4">
                <div class="card-header" style="background-color: #FFF4E6;">
                    <h5 class="mb-0" style="color: #FF9500;">Thông tin đơn hàng</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-6"><strong>Mã đơn hàng:</strong></div>
                        <div class="col-6">#@Model.Id</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6"><strong>Khách hàng:</strong></div>
                        <div class="col-6">@Model.Customer?.FullName</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6"><strong>Email:</strong></div>
                        <div class="col-6">@Model.Customer?.Email</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6"><strong>Ngày đặt:</strong></div>
                        <div class="col-6">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6"><strong>Tổng tiền:</strong></div>
                        <div class="col-6 fw-bold" style="color: #FF9500;">@Model.TotalAmount.ToString("N0")đ</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6"><strong>Phương thức thanh toán:</strong></div>
                        <div class="col-6">@Model.Payment?.Method</div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="row">
                            <div class="col-6"><strong>Ghi chú:</strong></div>
                            <div class="col-6">@Model.Notes</div>
                        </div>
                    }
                </div>
            </div>

            <!-- Chi tiết sản phẩm -->
            <div class="card">
                <div class="card-header" style="background-color: #FFF4E6;">
                    <h5 class="mb-0" style="color: #FF9500;">Chi tiết sản phẩm</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Món ăn</th>
                                    <th>Đơn giá</th>
                                    <th>Số lượng</th>
                                    <th>Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="~/Hinh/HangHoa/@item.MenuItem?.Image" class="img-fluid rounded me-3" style="width: 50px; height: 50px; object-fit: cover;" alt="@item.MenuItem?.Name">
                                                <span>@item.MenuItem?.Name</span>
                                            </div>
                                        </td>
                                        <td>@item.UnitPrice.ToString("N0")đ</td>
                                        <td>@item.Quantity</td>
                                        <td><strong>@((item.Quantity * item.UnitPrice).ToString("N0"))đ</strong></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <!-- Cập nhật trạng thái -->
            <div class="card">
                <div class="card-header" style="background-color: #FFF4E6;">
                    <h5 class="mb-0" style="color: #FF9500;">Cập nhật trạng thái</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label"><strong>Trạng thái hiện tại:</strong></label>
                        <div>
                            @{
                                var statusBadge = Model.Status switch
                                {
                                    "Pending" => "bg-warning",
                                    "Preparing" => "bg-info",
                                    "Delivering" => "bg-primary",
                                    "Delivered" => "bg-success",
                                    "Cancelled" => "bg-danger",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @statusBadge fs-6">@statusText</span>
                        </div>
                    </div>

                    <hr>

                    <div class="d-grid gap-2">
                        @if (Model.Status == "Pending")
                        {
                            <button class="btn text-white" style="background-color: #17a2b8;" onclick="updateStatus(@Model.Id, 'Preparing')">
                                <i class="fas fa-utensils me-2"></i>Xác nhận & Chuẩn bị món
                            </button>
                        }
                        @if (Model.Status == "Preparing")
                        {
                            <button class="btn text-white" style="background-color: #007bff;" onclick="updateStatus(@Model.Id, 'Delivering')">
                                <i class="fas fa-shipping-fast me-2"></i>Bắt đầu giao hàng
                            </button>
                        }
                        @if (Model.Status == "Delivering")
                        {
                            <button class="btn btn-success" onclick="updateStatus(@Model.Id, 'Delivered')">
                                <i class="fas fa-check-circle me-2"></i>Hoàn thành đơn hàng
                            </button>
                        }
                        @if (Model.Status != "Delivered" && Model.Status != "Cancelled")
                        {
                            <button class="btn btn-danger" onclick="showCancelModal(@Model.Id)">
                                <i class="fas fa-times-circle me-2"></i>Hủy đơn hàng
                            </button>
                        }
                        @if (Model.Status == "Cancelled" || (Model.Status == "Delivered" && Model.CreatedAt <= DateTime.UtcNow.AddDays(-30)))
                        {
                            <button class="btn btn-outline-danger" onclick="deleteOrder(@Model.Id)">
                                <i class="fas fa-trash me-2"></i>Xóa đơn hàng
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Cancel Order Modal -->
<div class="modal fade" id="cancelModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #FFF4E6;">
                <h5 class="modal-title" style="color: #FF9500;">Hủy đơn hàng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <label class="form-label">Lý do hủy đơn:</label>
                <textarea id="cancelReason" class="form-control" rows="3" placeholder="Nhập lý do hủy đơn (không bắt buộc)"></textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-danger" onclick="confirmCancel()">Xác nhận hủy</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var currentOrderId = 0;

        function updateStatus(orderId, status) {
            var statusText = {
                'Preparing': 'Chuẩn bị món',
                'Delivering': 'Đang giao',
                'Delivered': 'Hoàn thành'
            };

            if (confirm('Bạn có chắc muốn cập nhật trạng thái thành "' + statusText[status] + '"?')) {
                $.ajax({
                    url: '@Url.Action("UpdateOrderStatus", "Admin")',
                    type: 'POST',
                    data: { id: orderId, status: status },
                    success: function(response) {
                        if (response.success) {
                            alert(response.message);
                            location.reload();
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function() {
                        alert('Có lỗi xảy ra khi cập nhật trạng thái!');
                    }
                });
            }
        }

        function showCancelModal(orderId) {
            currentOrderId = orderId;
            var modal = new bootstrap.Modal(document.getElementById('cancelModal'));
            modal.show();
        }

        function confirmCancel() {
            var reason = document.getElementById('cancelReason').value;
            
            $.ajax({
                url: '@Url.Action("CancelOrder", "Admin")',
                type: 'POST',
                data: { id: currentOrderId, reason: reason },
                success: function(response) {
                    if (response.success) {
                        alert(response.message);
                        location.reload();
                    } else {
                        alert(response.message);
                    }
                },
                error: function() {
                    alert('Có lỗi xảy ra khi hủy đơn hàng!');
                }
            });
        }

        function deleteOrder(orderId) {
            if (confirm('Bạn có chắc muốn XÓA VĨNH VIỄN đơn hàng này? Hành động này không thể hoàn tác!')) {
                $.ajax({
                    url: '@Url.Action("DeleteOrder", "Admin")',
                    type: 'POST',
                    data: { id: orderId },
                    success: function(response) {
                        if (response.success) {
                            alert(response.message);
                            window.location.href = '@Url.Action("Orders", "Admin")';
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function() {
                        alert('Có lỗi xảy ra khi xóa đơn hàng!');
                    }
                });
            }
        }
    </script>
}
