<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>@ViewBag.Title - Admin Dashboard</title>
	<meta charset="utf-8">

	<!-- Google Web Fonts -->
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap" rel="stylesheet">

	<!-- Icon Font Stylesheet -->
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

	<!-- Bootstrap Stylesheet -->
	<link href="~/css/bootstrap.min.css" rel="stylesheet">
	<link href="~/css/style.css" rel="stylesheet">
	<link href="~/css/site.css" rel="stylesheet">
</head>
<body>
	<!-- Navbar start -->
	<div class="container-fluid fixed-top" style="background: linear-gradient(135deg, #FF9500 0%, #FF7C1F 100%); padding: 0; box-shadow: 0 2px 15px rgba(255, 149, 0, 0.4);">
		<div class="container-fluid topbar py-2">
			<div class="container px-3">
				<div class="d-flex justify-content-between align-items-center">
					<div class="top-info ps-2">
						<small class="me-3" style="color: white;"><i class="fas fa-shield-alt me-2"></i>Quản Trị Hệ Thống</small>
					</div>
					<div class="top-link pe-2">
						<small style="color: white;"><i class="fas fa-user-shield me-1"></i>Admin: @User.Identity?.Name</small>
					</div>
				</div>
			</div>
		</div>
		<div class="container-fluid" style="background: white; padding: 0; border-bottom: 3px solid #FF9500;">
			<nav class="navbar navbar-light navbar-expand-xl" style="background: white; padding: 0.8rem 0;">
				<div class="container px-3">
					<a asp-action="Index" asp-controller="Admin" class="navbar-brand"><h1 style="color: #FF9500; margin: 0; font-size: 1.8rem; font-weight: 700;"><i class="fas fa-cogs me-2" style="color: #FF9500;"></i>Admin Panel</h1></a>
					<button class="navbar-toggler py-2 px-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
						<span class="fa fa-bars" style="color: #FF9500;"></span>
					</button>
					<div class="collapse navbar-collapse" id="navbarCollapse">
						<div class="navbar-nav">
							<a asp-action="Index" asp-controller="Admin" class="nav-item nav-link navbar-custom-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")"><i class="fas fa-tachometer-alt me-1"></i>Dashboard</a>
							<a asp-action="Orders" asp-controller="Admin" class="nav-item nav-link navbar-custom-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Orders" || ViewContext.RouteData.Values["Action"]?.ToString() == "OrderDetails" ? "active" : "")"><i class="fas fa-shopping-bag me-1"></i>Đơn hàng</a>
							<a asp-action="MenuItems" asp-controller="Admin" class="nav-item nav-link navbar-custom-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "MenuItems" || ViewContext.RouteData.Values["Action"]?.ToString() == "CreateMenuItem" || ViewContext.RouteData.Values["Action"]?.ToString() == "EditMenuItem" ? "active" : "")"><i class="fas fa-utensils me-1"></i>Sản phẩm</a>
							<a asp-action="Customers" asp-controller="Admin" class="nav-item nav-link navbar-custom-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Customers" || ViewContext.RouteData.Values["Action"]?.ToString() == "CustomerDetails" ? "active" : "")"><i class="fas fa-users me-1"></i>Khách hàng</a>
							<a asp-action="Revenue" asp-controller="Admin" class="nav-item nav-link navbar-custom-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Revenue" ? "active" : "")"><i class="fas fa-chart-line me-1"></i>Doanh thu</a>
							<a asp-action="AdminChat" asp-controller="Admin" class="nav-item nav-link navbar-custom-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "AdminChat" ? "active" : "")"><i class="fas fa-comments me-1"></i>Tin nhắn</a>
						</div>
						<div class="d-flex m-3 me-0 ms-auto align-items-center">
							<div class="dropdown">
								<a href="#" class="dropdown-toggle d-flex align-items-center text-decoration-none" data-bs-toggle="dropdown">
									<i class="fas fa-user-shield fa-2x me-2" style="color: #FF9500;"></i>
									<span style="color: #2C3E50; font-weight: 500;">@User.Identity?.Name</span>
								</a>
								<ul class="dropdown-menu dropdown-menu-end m-0 rounded-2" style="background-color: white; border: 1px solid #FFE5CC; box-shadow: 0 4px 12px rgba(255, 149, 0, 0.2);">
									<li><a asp-controller="KhachHang" asp-action="DangXuat" class="dropdown-item navbar-dropdown-item"><i class="fas fa-sign-out-alt me-2" style="color: #E74C3C;"></i>Đăng xuất</a></li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</nav>
		</div>
	</div>
	<!-- Navbar End -->

	<div style="padding-top: 140px;">
		@RenderBody()
	</div>

	<!-- Footer Start -->
	<div class="container-fluid bg-dark text-white-50 footer pt-5 mt-5">
		<div class="container py-5">
			<div class="row g-5">
				<div class="col-lg-12 text-center">
					<h4 style="color: #FF9500;"><i class="fas fa-shield-alt me-2"></i>FoodHub Admin</h4>
					<p class="mt-3">© 2025 FoodHub Admin Panel. All rights reserved.</p>
				</div>
			</div>
		</div>
	</div>
	<!-- Footer End -->

	<!-- JavaScript Libraries -->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/main.js"></script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
