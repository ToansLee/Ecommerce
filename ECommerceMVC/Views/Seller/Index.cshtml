@{
	ViewData["Title"] = "Dashboard";
	Layout = "~/Views/Shared/_LayoutSeller.cshtml";
}

<div class="container-fluid py-5" style="background: linear-gradient(to bottom, #FFF8F0 0%, #FFFFFF 100%);">
	<div class="container py-5">
		<!-- Welcome Section -->
		<div class="row mb-4">
			<div class="col-12">
				<h2 style="color: #FF9500; font-weight: 700;">
					<i class="fas fa-chart-line me-2"></i>Dashboard - @ViewBag.RestaurantName
				</h2>
				<p style="color: #6C757D;">Tổng quan quản lý hệ thống</p>
			</div>
		</div>

		<!-- Statistics Cards -->
		<div class="row g-4 mb-5">
			<div class="col-md-3">
				<div class="card border-0 shadow-sm hover-card" style="border-radius: 15px; background: linear-gradient(135deg, #FF9500 0%, #FF7C1F 100%); transition: all 0.3s;">
					<div class="card-body p-4 text-white">
						<div class="d-flex justify-content-between align-items-center">
							<div>
								<p class="mb-1" style="opacity: 0.9; font-size: 0.9rem;">Tổng sản phẩm</p>
								<h2 class="mb-0" style="font-weight: 700;">@ViewBag.TotalMenuItems</h2>
							</div>
							<i class="fas fa-utensils fa-3x" style="opacity: 0.3;"></i>
						</div>
					</div>
				</div>
			</div>
			<div class="col-md-3">
				<div class="card border-0 shadow-sm hover-card" style="border-radius: 15px; background: linear-gradient(135deg, #28a745 0%, #20c997 100%); transition: all 0.3s;">
					<div class="card-body p-4 text-white">
						<div class="d-flex justify-content-between align-items-center">
							<div>
								<p class="mb-1" style="opacity: 0.9; font-size: 0.9rem;">Tổng đơn hàng</p>
								<h2 class="mb-0" style="font-weight: 700;">@ViewBag.TotalOrders</h2>
							</div>
							<i class="fas fa-shopping-cart fa-3x" style="opacity: 0.3;"></i>
						</div>
					</div>
				</div>
			</div>
			<div class="col-md-3">
				<div class="card border-0 shadow-sm hover-card" style="border-radius: 15px; background: linear-gradient(135deg, #6f42c1 0%, #b537f2 100%); transition: all 0.3s;">
					<div class="card-body p-4 text-white">
						<div class="d-flex justify-content-between align-items-center">
							<div>
								<p class="mb-1" style="opacity: 0.9; font-size: 0.9rem;">Tổng doanh thu</p>
								<h2 class="mb-0" style="font-weight: 700; font-size: 1.5rem;">@string.Format("{0:N0}đ", ViewBag.TotalRevenue)</h2>
							</div>
							<i class="fas fa-dollar-sign fa-3x" style="opacity: 0.3;"></i>
						</div>
					</div>
				</div>
			</div>
			<div class="col-md-3">
				<div class="card border-0 shadow-sm hover-card" style="border-radius: 15px; background: linear-gradient(135deg, #17a2b8 0%, #138496 100%); transition: all 0.3s;">
					<div class="card-body p-4 text-white">
						<div class="d-flex justify-content-between align-items-center">
							<div>
								<p class="mb-1" style="opacity: 0.9; font-size: 0.9rem;">Khách hàng</p>
								<h2 class="mb-0" style="font-weight: 700;">0</h2>
							</div>
							<i class="fas fa-users fa-3x" style="opacity: 0.3;"></i>
						</div>
					</div>
				</div>
			</div>
		</div>

		<!-- Quick Actions -->
		<div class="row mb-5">
			<div class="col-12">
				<div class="card border-0 shadow-sm" style="border-radius: 15px;">
					<div class="card-body p-4">
						<h5 class="mb-4" style="color: #FF9500; font-weight: 600;">
							<i class="fas fa-bolt me-2"></i>Thao tác nhanh
						</h5>
						<div class="row g-3">
							<div class="col-md-3">
								<a asp-action="CreateMenuItem" class="btn btn-lg w-100 action-btn" style="background: linear-gradient(135deg, #FF9500 0%, #FF7C1F 100%); color: white; border-radius: 10px; border: none; transition: all 0.3s;">
									<i class="fas fa-plus-circle me-2"></i>Thêm sản phẩm
								</a>
							</div>
							<div class="col-md-3">
								<a asp-action="MenuItems" class="btn btn-lg w-100 action-btn" style="background: white; color: #FF9500; border: 2px solid #FF9500; border-radius: 10px; transition: all 0.3s;">
									<i class="fas fa-list me-2"></i>Quản lý sản phẩm
								</a>
							</div>
							<div class="col-md-3">
								<a asp-action="Orders" class="btn btn-lg w-100 action-btn" style="background: white; color: #28a745; border: 2px solid #28a745; border-radius: 10px; transition: all 0.3s;">
									<i class="fas fa-shopping-bag me-2"></i>Quản lý đơn hàng
								</a>
							</div>
							<div class="col-md-3">
								<a asp-controller="Chat" asp-action="Index" class="btn btn-lg w-100 action-btn" style="background: white; color: #17a2b8; border: 2px solid #17a2b8; border-radius: 10px; transition: all 0.3s;">
									<i class="fas fa-comments me-2"></i>Tin nhắn khách hàng
								</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<!-- Recent Activities & Stats -->
		<div class="row">
			<div class="col-md-8">
				<div class="card border-0 shadow-sm" style="border-radius: 15px;">
					<div class="card-body p-4">
						<h5 class="mb-4" style="color: #FF9500; font-weight: 600;">
							<i class="fas fa-clock me-2"></i>Hoạt động gần đây
						</h5>
						<div class="alert border-0" style="background: #FFF8F0; color: #2C3E50; border-radius: 10px; border-left: 4px solid #FF9500;">
							<i class="fas fa-info-circle me-2" style="color: #FF9500;"></i>
							<strong>Thông báo:</strong> Bạn đang quản lý @ViewBag.TotalMenuItems sản phẩm và @ViewBag.TotalOrders đơn hàng trong hệ thống.
						</div>
						<div class="list-group list-group-flush">
							<div class="list-group-item border-0 px-0">
								<div class="d-flex align-items-center">
									<div class="flex-shrink-0">
										<div class="rounded-circle d-flex align-items-center justify-content-center" style="width: 45px; height: 45px; background: #E8F8F5;">
											<i class="fas fa-shopping-cart fa-lg" style="color: #28a745;"></i>
										</div>
									</div>
									<div class="flex-grow-1 ms-3">
										<p class="mb-0" style="color: #2C3E50; font-weight: 500;">Quản lý đơn hàng</p>
										<small class="text-muted">Theo dõi và cập nhật trạng thái đơn hàng</small>
									</div>
									<a asp-action="Orders" class="btn btn-sm" style="background: #28a745; color: white; border-radius: 8px;">Xem</a>
								</div>
							</div>
							<div class="list-group-item border-0 px-0">
								<div class="d-flex align-items-center">
									<div class="flex-shrink-0">
										<div class="rounded-circle d-flex align-items-center justify-content-center" style="width: 45px; height: 45px; background: #FFF8F0;">
											<i class="fas fa-utensils fa-lg" style="color: #FF9500;"></i>
										</div>
									</div>
									<div class="flex-grow-1 ms-3">
										<p class="mb-0" style="color: #2C3E50; font-weight: 500;">Quản lý sản phẩm</p>
										<small class="text-muted">Thêm, sửa, xóa và vô hiệu hóa sản phẩm</small>
									</div>
									<a asp-action="MenuItems" class="btn btn-sm" style="background: #FF9500; color: white; border-radius: 8px;">Xem</a>
								</div>
							</div>
							<div class="list-group-item border-0 px-0">
								<div class="d-flex align-items-center">
									<div class="flex-shrink-0">
										<div class="rounded-circle d-flex align-items-center justify-content-center" style="width: 45px; height: 45px; background: #E8F4F8;">
											<i class="fas fa-comments fa-lg" style="color: #17a2b8;"></i>
										</div>
									</div>
									<div class="flex-grow-1 ms-3">
										<p class="mb-0" style="color: #2C3E50; font-weight: 500;">Hỗ trợ khách hàng</p>
										<small class="text-muted">Chat trực tiếp với khách hàng</small>
									</div>
									<a asp-controller="Chat" asp-action="Index" class="btn btn-sm" style="background: #17a2b8; color: white; border-radius: 8px;">Chat</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col-md-4">
				<div class="card border-0 shadow-sm" style="border-radius: 15px;">
					<div class="card-body p-4">
						<h5 class="mb-4" style="color: #FF9500; font-weight: 600;">
							<i class="fas fa-chart-pie me-2"></i>Thống kê nhanh
						</h5>
						<div class="mb-4">
							<div class="d-flex justify-content-between mb-2">
								<span style="color: #6C757D;">Đơn đã giao</span>
								<strong style="color: #28a745;">@ViewBag.TotalOrders</strong>
							</div>
							<div class="progress" style="height: 10px; border-radius: 10px; background: #E9ECEF;">
								<div class="progress-bar" style="background: linear-gradient(90deg, #28a745 0%, #20c997 100%); width: 100%;"></div>
							</div>
						</div>
						<div class="mb-4">
							<div class="d-flex justify-content-between mb-2">
								<span style="color: #6C757D;">Sản phẩm đang bán</span>
								<strong style="color: #FF9500;">@ViewBag.TotalMenuItems</strong>
							</div>
							<div class="progress" style="height: 10px; border-radius: 10px; background: #E9ECEF;">
								<div class="progress-bar" style="background: linear-gradient(90deg, #FF9500 0%, #FF7C1F 100%); width: 90%;"></div>
							</div>
						</div>
						<div class="mb-3">
							<div class="d-flex justify-content-between mb-2">
								<span style="color: #6C757D;">Doanh thu</span>
								<strong style="color: #6f42c1;">@string.Format("{0:N0}đ", ViewBag.TotalRevenue)</strong>
							</div>
							<div class="progress" style="height: 10px; border-radius: 10px; background: #E9ECEF;">
								<div class="progress-bar" style="background: linear-gradient(90deg, #6f42c1 0%, #b537f2 100%); width: 75%;"></div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<style>
.hover-card:hover {
	transform: translateY(-5px);
	box-shadow: 0 10px 25px rgba(255, 149, 0, 0.2) !important;
}

.action-btn:hover {
	transform: translateY(-3px);
	box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
}

.navbar-custom-link:hover,
.navbar-custom-link.active {
	color: #FF9500 !important;
	border-bottom: 2px solid #FF9500;
}
</style>
