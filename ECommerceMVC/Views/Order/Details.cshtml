@model ECommerceMVC.Models.Order
@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    var statusText = Model.Status switch
    {
        "Pending" => "Chờ xác nhận",
        "Preparing" => "Chuẩn bị món",
        "Delivering" => "Đang giao",
        "Delivered" => "Hoàn thành",
        "Cancelled" => "Đã hủy",
        _ => Model.Status
    };
}

<!-- Single Page Header start -->
<div class="container-fluid page-header py-5" style="background: linear-gradient(135deg, rgba(255, 149, 0, 0.8) 0%, rgba(245, 169, 96, 0.8) 100%), url('/img/cart-page-header-img.jpg') center center/cover no-repeat;">
    <h1 class="text-center text-white display-6">Chi tiết đơn hàng #@Model.Id</h1>
</div>
<!-- Single Page Header End -->

<!-- Order Details Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Trạng thái đơn hàng -->
                <div class="rounded p-4 mb-4 text-center" style="background-color: #FFF4E6;">
                    <h4 class="mb-3" style="color: #FF9500;">Trạng thái đơn hàng</h4>
                    
                    <div class="d-flex justify-content-between align-items-center mb-4 position-relative">
                        <div class="flex-fill text-center">
                            <div class="rounded-circle mx-auto mb-2 d-flex align-items-center justify-content-center @(Model.Status == "Pending" || Model.Status == "Preparing" || Model.Status == "Delivering" || Model.Status == "Delivered" ? "bg-success" : "bg-secondary")" style="width: 60px; height: 60px;">
                                <i class="fas fa-clock text-white fa-2x"></i>
                            </div>
                            <small class="fw-bold">Chờ xác nhận</small>
                        </div>
                        
                        <div class="flex-fill" style="height: 3px; background-color: @(Model.Status == "Preparing" || Model.Status == "Delivering" || Model.Status == "Delivered" ? "#28a745" : "#dee2e6"); margin: 0 10px 30px;"></div>
                        
                        <div class="flex-fill text-center">
                            <div class="rounded-circle mx-auto mb-2 d-flex align-items-center justify-content-center @(Model.Status == "Preparing" || Model.Status == "Delivering" || Model.Status == "Delivered" ? "bg-success" : "bg-secondary")" style="width: 60px; height: 60px;">
                                <i class="fas fa-utensils text-white fa-2x"></i>
                            </div>
                            <small class="fw-bold">Chuẩn bị món</small>
                        </div>
                        
                        <div class="flex-fill" style="height: 3px; background-color: @(Model.Status == "Delivering" || Model.Status == "Delivered" ? "#28a745" : "#dee2e6"); margin: 0 10px 30px;"></div>
                        
                        <div class="flex-fill text-center">
                            <div class="rounded-circle mx-auto mb-2 d-flex align-items-center justify-content-center @(Model.Status == "Delivering" || Model.Status == "Delivered" ? "bg-success" : "bg-secondary")" style="width: 60px; height: 60px;">
                                <i class="fas fa-shipping-fast text-white fa-2x"></i>
                            </div>
                            <small class="fw-bold">Đang giao</small>
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Trạng thái hiện tại: <strong>@statusText</strong>
                    </div>
                </div>

                <!-- Thông tin đơn hàng -->
                <div class="rounded p-4 mb-4" style="background-color: #FFF4E6;">
                    <h4 class="mb-3" style="color: #FF9500;">Thông tin đơn hàng</h4>
                    <div class="row mb-2">
                        <div class="col-6"><strong>Mã đơn hàng:</strong></div>
                        <div class="col-6">#@Model.Id</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-6"><strong>Ngày đặt:</strong></div>
                        <div class="col-6">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-6"><strong>Tổng tiền:</strong></div>
                        <div class="col-6 fw-bold" style="color: #FF9500;">@Model.TotalAmount.ToString("N0") VNĐ</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-6"><strong>Phương thức thanh toán:</strong></div>
                        <div class="col-6">Thanh toán khi nhận hàng (COD)</div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="row">
                            <div class="col-6"><strong>Ghi chú:</strong></div>
                            <div class="col-6">@Model.Notes</div>
                        </div>
                    }
                </div>

                <!-- Chi tiết sản phẩm -->
                <div class="rounded p-4 mb-4" style="background-color: #FFF4E6;">
                    <h4 class="mb-3" style="color: #FF9500;">Chi tiết sản phẩm</h4>
                    @foreach (var item in Model.Items)
                    {
                        <div class="d-flex justify-content-between align-items-center mb-3 pb-3 border-bottom">
                            <div class="d-flex align-items-center">
                                <img src="~/Hinh/HangHoa/@item.MenuItem?.Image" class="img-fluid rounded" style="width: 80px; height: 80px; object-fit: cover;" alt="@item.MenuItem?.Name">
                                <div class="ms-3">
                                    <h6 class="mb-1">@item.MenuItem?.Name</h6>
                                    <small class="text-muted">Số lượng: @item.Quantity × @item.UnitPrice.ToString("N0") đ</small>
                                </div>
                            </div>
                            <p class="mb-0 fw-bold">@((item.Quantity * item.UnitPrice).ToString("N0")) đ</p>
                        </div>
                    }
                </div>

                <div class="text-center mt-4">
                    @if (Model.Status != "Cancelled")
                    {
                        <a asp-action="ExportInvoice" asp-route-id="@Model.Id" class="btn btn-lg btn-success me-3" style="border: none; border-radius: 50px; padding: 12px 40px;">
                            <i class="fas fa-file-pdf me-2"></i>Xuất hóa đơn PDF
                        </a>
                    }
                    <a asp-action="Index" class="btn btn-lg text-white" style="background-color: #FF9500; border: none; border-radius: 50px; padding: 12px 40px;">
                        <i class="fa fa-arrow-left me-2"></i>Quay lại lịch sử
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Order Details End -->
